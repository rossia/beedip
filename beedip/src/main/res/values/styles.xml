<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#89000000</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#f2de00</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >1dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor" >#604000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#f2de00</item>
        <item name="android:textColorPrimary">#f2de00</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColorAlertDialogListItem">#f2de00</item>
        <item name="android:editTextColor">#000000</item>
        <item name="android:colorFocusedHighlight">#f2de00</item>

    </style>

    <style name="App_Theme" parent="@android:style/Theme.Dialog">
        <item name="editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Theme.Dialog">
        <item name="android:colorControlNormal">#f2de00</item>
        <item name="android:colorControlActivated">#F222AA</item>
        <item name="android:colorControlHighlight">#F222AA</item>
    </style>

</resources>
